{% extends 'base.html.twig' %}

{% block title %}Hello AbonnementController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<main>
    <div class="block-2">

        <p>Votre abonnement actuel : {{ user.getSubscription().getTitle() }} </p>

        <form method="POST" action="{{ path('app_abonnement') }}">
            <div class="container-abo">
                {% for subscription in subscriptions %}
                    <div class="card-abo">
                        <p class="">{{ subscription.title }}</p>
                        <p>{{ subscription.price }} â‚¬</p>
                        <br>
                        <p>{{ subscription.description }}</p>
                        <br>
                        <input type="radio" id="{{ subscription.id }}" name="subscription" value="{{ subscription.id }}" class="radio" required>
                        <br>
                    </div>
                {% endfor %}
            </div>

            <button type="submit" class="subbutton">Je change d'abonnement</button>

        </form>

    </div>
</main>

{% endblock %}
